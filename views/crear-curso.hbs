<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <!--Bootstrap css -->
  <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css">
  <title>OWTF</title>
</head>

<body class="container">
  {{session}}
  <h1>Formulario de creación de curso</h1>
  <form action="crear" method="POST">
  <div class="form-group">
    <label>Nombre</label>
    <input type="text" class="form-control" id="inputName" name="nombre" placeholder="Ingrese nombre del curso" required>
  </div>
  <div class="form-group">
    <label>ID</label>
    <input type="text" class="form-control" id="inputID" name="identificador" placeholder="Ingrese ID de curso" required>
  </div>
  <div class="form-group">
    <label>Descripción</label>
    <textarea class="form-control" id="inputDesc" name="descripcion" placeholder="Ingrese una breve descripción del curso" required rows="3"></textarea>
  </div>
  <div class="form-group">
    <label>Valor</label>
    <input type="text" class="form-control" id="inputValue" name="valor" placeholder="Ingrese el valor del curso ($COP)" required>
  </div>
  <div class="form-group">
    <label>Intensidad horaria (opcional)</label>
    <input type="text" class="form-control" id="inputIntensidad" name="intensidad" placeholder="Ingrese la intensidad del curso (en horas)">
  </div>
  <div>
    <label>Seleccione la modalidad del curso (opcional)</label>
  </div>
  <div class="form-check">
    <input class="form-check-input" type="radio" name="modalidad" id="virt" value="virtual">
    <label class="form-check-label" for="exampleRadios1">Virtual</label>
  </div>
  <div class="form-check">
    <input class="form-check-input" type="radio" name="modalidad" id="pres" value="presencial">
    <label class="form-check-label" for="exampleRadios1">Presencial</label>
  </div>
  <button type="submit" class="btn btn-primary">Crear curso</button>
</form>

  <h4 onclick="document.location.href='/'">Volver</h4>
  <script src="js/jquery.min.js"></script>
  <script src="js/popper.min.js"></script>
  <script src="js/bootstrap.min.js"></script>
</body>

</html>