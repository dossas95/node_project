<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <!--Bootstrap css -->
  <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css">
  <title>OWTF</title>
</head>

<body class="container">
  {{session}}
  <h1>Formulario de registro</h1>
  <form action="registrar">
  <div class="form-group">
    <label for="inputName">Nombre</label>
    <input type="text" class="form-control" id="inputName" name="nombre" placeholder="Ingrese nombre" required>
  </div>
  <div class="form-group">
    <label for="inputID">Documento de identidad</label>
    <input type="text" class="form-control" id="inputID" name="id" placeholder="Ingrese documento de identidad" required>
  </div>
  <div class="form-group">
    <label for="inputEmail1">Correo electrónico</label>
    <input type="email" class="form-control" id="inputEmail" name="correo" placeholder="Ingrese el correo electrónico" required>
  </div>
  <div class="form-group">
    <label for="inputEmail1">Teléfono</label>
    <input type="text" class="form-control" id="inputPhone" name="telefono" placeholder="Ingrese el Teléfono" required>
  </div>
  <div class="form-group">
    <label for="inputPassword1">Contraseña</label>
    <input type="password" class="form-control" id="inputPassword" name="contrasena" placeholder="Ingrese la contraseña" required>
  </div>
  <button type="submit" class="btn btn-primary">Registrar</button>
</form>

  <h4 onclick="document.location.href='/'">Volver</h4>


  <script src="js/jquery.min.js"></script>
  <script src="js/popper.min.js"></script>
  <script src="js/bootstrap.min.js"></script>
</body>

</html>