<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!--Bootstrap css -->
    <link rel="stylesheet" href="/css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="../css/login.css">
    <title>Login</title>
  </head>
  <body class="container login">
    <div class="card">
      <div class="title">Login</div>
      <div class="volver" onclick="document.location.href='/'">Volver</div>

      <form action="/validar-datos" method="get">
        <div class="form-group">
          <label for="email">Email address</label>
          <input type="email" name="correo" class="form-control" id="email" placeholder="correo@owtf.com" required>
        </div>
        <div class="form-group">
          <label for="pass">Password</label>
          <input type="password" name="pass" class="form-control" id="pass" required>
        </div>
        <div class="btn-section">
          <button class="btn btn-primary">Entrar</button>
        </div>
      </form>

   </div>
  </body>
</html>

